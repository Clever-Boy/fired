SUBDIRS := ${shell find * -type d -print}
OBJS    += $(SUBDIRS:=.o)



all: $(PROJECT)


$(PROJECT): subdirs $(OBJS)
	$(CC) $(OBJS) -o $(PROJECT) $(LDFLAGS)
	$(STRIP) $(PROJECT)


subdirs: $(SUBDIRS)
	for dir in $(SUBDIRS); do \
		export SUBDIR=$$dir; \
		$(MAKESUB); \
	done


clean: clean-subdirs
	$(CLEAN) $(PROJECT) $(OBJS)


clean-subdirs:
	for dir in $(SUBDIRS); do \
		$(MAKESUB) clean; \
	done
